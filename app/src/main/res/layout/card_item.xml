<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="@dimen/dimen_8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dimen_16dp">

        <ImageView
            android:id="@+id/cryptoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btc_bg"
            android:contentDescription="@string/crypto_image"
            app:srcCompat="@drawable/ic_btc_white" />

        <TextView
            android:id="@+id/currencyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="138.99" />

        <TextView
            android:id="@+id/currencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/currencyValue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="USD" />

        <TextView
            android:id="@+id/currencySign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_3dp"
            android:layout_toLeftOf="@id/currencyValue"
            android:layout_toStartOf="@id/currencyValue"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="$" />

        <ImageView
            android:id="@+id/converterSign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/cryptoImage"
            android:layout_toLeftOf="@id/currencySign"
            android:layout_toRightOf="@id/cryptoImage"
            android:layout_toStartOf="@id/currencySign"
            android:contentDescription="@string/converter_symbol"
            android:padding="@dimen/dimen_8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_swap_horiz" />
    </RelativeLayout>

</android.support.v7.widget.CardView>